<mvc:View
    controllerName="proyectofinal.controller.Menu"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
>
    <Shell id="shell">
        <App id="app">
            <pages>
                <Page id="page" title="{i18n>Menutitle}">
 
					<content>
						<Panel headerText="{i18n>empleados}" expandable="true" expanded="true">
							<GenericTile headerImage="sap-icon://add-employee" class="sapUiTinyMarginBegin sapUiTinyMarginTop" press="navToCrearEmployee">
								<TileContent footer="{i18n>crearEmpleado}">
								</TileContent>
							</GenericTile>
							<GenericTile headerImage="sap-icon://employee-lookup" class="sapUiTinyMarginBegin sapUiTinyMarginTop" press="navToVerEmployee">
								<TileContent footer="{i18n>visualizarEmpleados}">
								</TileContent>
							</GenericTile>
						</Panel>
						<Panel headerText="{i18n>TituloPedido}"  expandable="true" expanded="true">
							<GenericTile id="linkPedido"  headerImage="sap-icon://signature" class="sapUiTinyMarginBegin sapUiTinyMarginTop"
                             url="https://c7c737c1trial-dev-logali-approuter.cfapps.eu10.hana.ondemand.com/logaligroupemployees/index.html">
								<TileContent footer="{i18n>pedido}">
								</TileContent>
							</GenericTile>
						</Panel>
					</content>
			 
                </Page>
            </pages>
        </App>
    </Shell>
</mvc:View>
